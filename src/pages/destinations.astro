---
import Base from '../layouts/Base.astro';
import destinations from '../../data/destinations.json'
---
<Base title="Destinations">
  <h1 class="text-4xl sm:text-5xl font-black tracking-wide text-center w-full mb-8 p-4">Destinations</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {destinations.map(destination => {
      const imageSrc = `https://res.cloudinary.com/tamas-demo/image/upload/f_auto,q_auto,w_295,h_295,c_fill/${destination.publicId}`;
      return (
      <div class="rounded-lg shadow-lg mb-4 bg-background-paper p-6 flex justify-between flex-col md:mx-3 border">
        <div>
          <a href="#!" class="block max-w-half md:max-w-sm mx-auto">
            <img class="w-full" src={imageSrc} alt={destination.country} />
          </a>
          <div class="pt-6 text-center">
            <h3 class="font-serif text-xl font-normal leading-tight mt-0 mb-2">{destination.country}</h3>
            <p class="mb-4">{destination.description}</p>
          </div>
        </div>
        <div class="text-center">
          <a href={`/destinations/${destination.country.toLowerCase()}`} class="inline-block px-6 py-3 bg-indigo-800 text-white font-bold leading-tight rounded hover:bg-indigo-600 focus:bg-indigo-600 focus:outline-none focus:ring-0 active:bg-primary-dark transition duration-150 ease-in-out">Explore</a>
        </div>
      </div>
      )
    })}
  </div>
</Base>
